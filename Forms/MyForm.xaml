<Window x:Class="RAA_Level2.MyForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RAA_Level2"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800" ResizeMode="NoResize">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="1" Content="Project Setup" VerticalAlignment="Top" FontFamily="Arial Rounded MT Bold" FontSize="48" />
        <Label Grid.Row="1" Grid.Column="1" Content="Select Setup CSV File:" VerticalAlignment="Center" FontFamily="Arial" FontSize="16" />
        <Grid Grid.Column="1" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="txtFilePath" Grid.Column="0" VerticalAlignment="Center" FontFamily="Arial" FontSize="12" Margin="0,0,10,0" Height="33"/>
            <Button x:Name="btnSelect" Grid.Column="1" Content="Select..." HorizontalAlignment="Center"  VerticalAlignment="Center" Width="75" Height="30" FontSize="14" Click="btnSelect_Click" />
        </Grid>
        <Label Grid.Row="3" Grid.Column="1" Content="Select Units:" VerticalAlignment="Center" FontFamily="Arial" FontSize="16" />
        <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" >
            <RadioButton x:Name="rdoFeet" Content="Feet" FontFamily="Arial" FontSize="16" Margin="0,0,20,0" GroupName="Units"/>
            <RadioButton x:Name="rdoMeters" Content="Metric (mm)" FontFamily="Arial" FontSize="16" IsChecked="True" GroupName="Units"/>
        </StackPanel>
        <Label Grid.Row="5" Grid.Column="1" Content="Select Views to Create:" VerticalAlignment="Center" FontFamily="Arial" FontSize="16" />
        <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Vertical" VerticalAlignment="Top">
            <CheckBox x:Name="chkFloorPlans" Content="Floor Plans" FontFamily="Arial" FontSize="16" Margin="0,0,0,10"/>
            <CheckBox x:Name="chkCeilingPlans" Content="Ceiling Plans" FontFamily="Arial" FontSize="16" Margin="0,0,0,10"/>
        </StackPanel>
        <StackPanel Grid.Row="7" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0" >
            <Button x:Name="btnOK" Content="OK" Width="75" Height="30" FontSize="14" Margin="0,0,10,0" Click="btnOK_Click"/>
            <Button x:Name="btnCancel" Content="Cancel" Width="75" Height="30" FontSize="14" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
